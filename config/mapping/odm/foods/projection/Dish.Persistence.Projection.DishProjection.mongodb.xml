<doctrine-mongo-mapping xmlns="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping"
                        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xsi:schemaLocation="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping
                    http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping.xsd">
    <document name="App\Food\Infrastructure\Dish\Persistence\Projection\DishProjection" collection="dishes">
        <field fieldName="id" id="true" type="string" strategy="none" />
        <embed-one field="label" target-document="App\Food\Domain\Dish\ValueObject\DishLabel" />
        <embed-one field="serving_count" fieldName="servingCount" target-document="App\Food\Domain\Dish\ValueObject\DishServingCount" />
        <embed-one field="nutritional_sheet" fieldName="nutritionalSheet" target-document="App\Food\Domain\Shared\ValueObject\NutritionalSheet" />
        <embed-many
                field="ingredients"
                target-document="App\Food\Domain\Dish\ValueObject\DishIngredient"
                collection-class="App\Food\Domain\Dish\ValueObject\DishIngredientCollection" />
    </document>
</doctrine-mongo-mapping>